@startuml
left to right direction
skinparam packageStyle rectangle

actor "Customer" as customer
actor "Staff" as staff

rectangle "Hotel Automation System (PRJ-4)" {
  usecase "Login" as UC_Login
  usecase "Logout" as UC_Logout

  usecase "Register\n(Builder Pattern)" as UC_Register
  usecase "Search and List Rooms" as UC_SearchRoom
  usecase "Make Reservation" as UC_MakeRes
  usecase "View Past Reservations" as UC_ViewHistory
  usecase "Cancel Own Reservation" as UC_CancelSelf
  usecase "Update Profile" as UC_UpdateProfile

  usecase "Room Management\n(Factory Pattern)" as UC_ManageRoom
  usecase "Customer Management" as UC_ManageCust
  usecase "Reservation Management" as UC_ManageRes
  usecase "Check-In / Check-Out\n(State Pattern)" as UC_CheckInOut
  usecase "Make Reservation for Customer" as UC_StaffRes
  usecase "Cancel (Staff)" as UC_StaffCancel
  usecase "Select Price Strategy\n(Strategy Pattern)" as UC_Strategy
}

customer --> UC_Login
customer --> UC_Register
customer --> UC_SearchRoom
customer --> UC_MakeRes
customer --> UC_ViewHistory
customer --> UC_CancelSelf
customer --> UC_UpdateProfile
customer --> UC_Logout

staff --> UC_Login
staff --> UC_ManageRoom
staff --> UC_ManageCust
staff --> UC_ManageRes
staff --> UC_CheckInOut
staff --> UC_StaffRes
staff --> UC_StaffCancel
staff --> UC_Logout

UC_StaffRes ..> UC_Strategy : <<include>>

note right of UC_Strategy
  Staff selects either
  a Standard or Discounted
  price strategy.
end note
@enduml
